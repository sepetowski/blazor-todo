@rendermode InteractiveServer

<div class="@(Todo.CompleteDate != null ? "bg-info-subtle":"bg-light-subtle")  w-100 rounded-2 p-2 p-md-3 border shadow-sm">
       
        <div class="d-flex flex-row align-items-center justify-content-between">
            <div>
                @if(Todo.CompleteDate != null){
                <div>
                    <p class="fw-bold">Completed on <span>@Todo.CompleteDate</span></p>
                </div>
                }
                <div  class="d-flex gap-2 align-items-center">
                <h2>@Todo.Title</h2>
                <h3>@Todo.PiorityLevel</h3>
                </div>
            </div>
                <div class="bg-dark rounded-2 p-1 d-flex align-items-center gap-2 my-2 ">
                    <button @onclick="ToggleCompleted" class="btn btn-sm btn-success">
                        @if(Todo.CompleteDate !=null)
                        {
                        <i class="bi bi-x-lg"></i>
                        }
                        else{
                        <i class="bi bi-check-lg"></i>
                        }
                        </button>
                    <button class="btn btn-sm btn-primary"><i class="bi bi-pencil"></i></button>
                    <button  @onclick="DeleteTodo" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></button>
                </div>
        </div>
         <div class="d-flex gap-2 align-items-center">
            @foreach(var tag in activeTags){
                 <span @key="tag.Id" class="badge text-bg-primary">@tag.Title</span>
            }
        </div>
        <div class="mt-4">
            <p>@Todo.Description</p>
        </div>
</div>
